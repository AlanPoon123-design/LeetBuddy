{
  "manifest_version": 3,
  "version": "1.0.4",
  "name": "LeetBuddy",
  "description": "AI tools for LeetCode: Hints, Chat, Whiteboard & more!",
  "action": {
    "default_icon": "favicon-Photoroom.png",
    "default_popup": "index.html"
  },
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": [
    "https://leetcode.com/problems/*",
    "__HOST_PERMISSION__"
  ],
  "icons": {
    "16": "lb_icon_head.png",
    "32": "lb_icon_head.png",
    "128": "lb_icon_head.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
