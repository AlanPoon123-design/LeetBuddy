{
    "manifest_version": 3,
    "version": "1.0.3",
    "name": "LeetBuddy",
    "description": "AI tools for LeetCode: hints, chat, whiteboard & more.",
    "action": {
      "default_icon": "favicon-Photoroom.png",
      "default_popup": "index.html"
    },
    "permissions": [
      "scripting",
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "https://leetcode.com/problems/*",
      "http://leetcode.com/problems/*"
    ],
    "icons": {
      "16": "lb_icon_head.png",
      "32": "lb_icon_head.png",
      "128": "lb_icon_head.png"
    }
  }